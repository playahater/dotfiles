[user]
	name = playahater
	email = mishkez@gmail.com
  logallrefupdates = true
[github]
  user = playahater
  token = 8c352ef8d7459bb990bdcb577c82e332
  ssl = true
[core]
  legacyheaders = false
  quotepath = false
  autocrlf = input
  pager = less -RSFX
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol,space-before-tab,tabwidth=4
[branch]
  autosetupmerge = always
  autosetuprebase = always
[apply]
  whitespace = fix
[advice]
  pushNonFastForward = false
  statusHints = false
[format]
  numbered = auto
[rerere]
  enabled = true
  autoupdate = true
[repack]
  usedeltabaseoffset = true
[push]
	default = matching
[merge]
  log = true
	tool = vimdiff3
	conflictstyle = diff3
[mergetool]
  prompt = false
[mergetool "vimdiff3"]
  cmd = vim -f -d -c \"wincmd J\" -c \"wincmd =\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
  trustExitCode = true
[log]
  decorate = true
[help]
  autocorrect = 0
  format = man
[color]
  pager = true
  ui = true
  diff = auto
  status = auto
  branch = auto
[color "branch"]
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[alias]
  lg = log --stat --graph --pretty=format:'%Cred%h%Creset :: %ar :: %C(yellow)%s%Creset :: %Cgreen%an%Creset'
  st = status
  ci = commit
  br = branch
  co = checkout
  df = diff --word-diff
  ls = ls-files
  adddatetag = 'tag date `"+%Y%m%d%H%M"`'
